            -->
            <!-- END: POPULAR KEYWORDS -->
            <!--<BoxView />-->

            <!-- START: LATEST NEWS -->
            <StackLayout>
                <Label Text="Latest News"/>
            </StackLayout>

            <!--<ScrollView Orientation="Vertical">
                <StackLayout Orientation="Vertical" BindableLayout.ItemsSource="{Binding LatestArticles}" BindableLayout.ItemTemplate="{StaticResource ArticleTemplate}"/>
            </ScrollView>-->

            <CollectionView ItemsSource="{Binding LatestArticles}">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:Article">
                        <Border StrokeThickness="0.5">
                            <ContentView Padding="16">
                                <ContentView.GestureRecognizers>
                                    <TapGestureRecognizer CommandParameter="{Binding .}" 
                                                          Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:HomeViewModel}}, Path=NavigateToArticleCommand}"/>
                                </ContentView.GestureRecognizers>
                                <Grid ColumnSpacing="16">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="120"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="80"/>
                                        <RowDefinition Height="20"/>
                                    </Grid.RowDefinitions>

                                    <Frame Padding="0" Grid.Column="0" Grid.RowSpan="3" BorderColor="Transparent" IsClippedToBounds="True">
                                        <Image Source="{Binding ImageURL}"
                                               Aspect="AspectFill"/>
                                    </Frame>

                                    <Label Text="{Binding Title}"
                                           Grid.Row="0" Grid.Column="1"
                                                 FontSize="15"/>

                                    <StackLayout Orientation="Horizontal"
                                           Spacing="4"
                                           Grid.Row="1"
                                           Grid.Column="1">
                                          <Label Text="{Binding Category, Converter={StaticResource ListToStringConverter}}"
                                                TextColor="{StaticResource Primary}"/>
                                          <Label Text="·"
                                             FontAttributes="Bold"
                                             TextColor="{StaticResource Gray200}"/>
                                          <Label Text="{Binding PublishedAt, Converter={StaticResource RelativeTimeConverter}}"
                                            TextColor="{StaticResource Gray200}"/>
                                    </StackLayout>


                                </Grid>
                            </ContentView>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
                <CollectionView.Footer>
                    <!-- For some reason, last item is hidden behind bottom bar. Add blank footer to compensate. -->
                    <BoxView HeightRequest="100" Color="White"/>
                </CollectionView.Footer>
            </CollectionView>

        </VerticalStackLayout>
        <!-- END: LATEST NEWS -->
    </ScrollView>
</ContentPage>
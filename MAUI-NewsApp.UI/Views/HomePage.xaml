    <ScrollView>
        <VerticalStackLayout>

            <!-- START: POPULAR KEYWORDS -->
            <!--<StackLayout>
                <Label Text="Popular Keywords"/>
            </StackLayout>

            <FlexLayout BindableLayout.ItemsSource="{Binding Keywords}"
                        Wrap="Wrap"
                        Margin="2,0">
                <BindableLayout.ItemTemplate>
                    <DataTemplate>
                        <Frame BackgroundColor="#f2f2f2"
